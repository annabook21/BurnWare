# BurnWare Application Environment Variables

# Environment
NODE_ENV=production
ENVIRONMENT=production
PORT=3000

# AWS Configuration
AWS_REGION=us-east-1

# Database
DB_SECRET_ID=burnware/db/credentials

# Cognito
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Application
BASE_URL=https://burnware.example.com
APP_SECRET=change-me-to-secure-random-string
ALLOWED_ORIGINS=https://burnware.example.com

# QR Codes
QR_CODE_BUCKET=burnware-qr-codes

# Logging
LOG_LEVEL=info

# X-Ray
ENABLE_XRAY=true
